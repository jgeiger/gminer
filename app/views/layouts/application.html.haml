  %head
    %meta{ :content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type" }
    %title
      = h(yield(:title) || "GMiner")
    %script{ :src => "/javascripts/jquery.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/jquery.highlight-3.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/jquery.pagination.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/application.js", :type => "text/javascript" }
    %link{ :href => "/stylesheets/reset-fonts-grids.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
    %link{ :href => "/stylesheets/base.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
    %link{ :href => "/stylesheets/main.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
    %link{ :href => "/stylesheets/boxes.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }

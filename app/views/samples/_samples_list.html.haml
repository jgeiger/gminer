%br
- if @samples.size == 0
  %p
    No samples found...
- else
  %p
    = found_count("samples", @samples)
  %p
  - if @samples.total_pages > 1
    = partial("shared/pagination", :items =>  @samples, :format => :html)
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "20%"}
          %b
            GEO accession
        %td{:width => "40%"}
          %b
            Series title
        %td{:width => "40%"}
          %b
            Sample title
    %tbody#staffTable
      = partial("sample", :with => @samples, :format => :html)

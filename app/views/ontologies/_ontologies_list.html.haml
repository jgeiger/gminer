%br
- if @ontologies.size == 0
  %p
    No ontologies found...
- else
  %p
    = found_count("ontologies", @ontologies)
  %p
    = render(:partial => "shared/pagination", :locals => {:items => @ontologies})
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "40%"}
          %b
            Name
        %td{:width => "10%"}
          %b
            Version
        - admin_only do
          %td{:width => "40%"}
            %b
              Stopwords
          %td{:width => "10%"}
            %b
              Action
    %tbody#staffTable
      = render(:partial => "ontology", :collection => @ontologies)

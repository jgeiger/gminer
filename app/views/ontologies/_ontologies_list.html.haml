%br
- if @ontologies.size == 0
  %p
    No ontologies found...
- else
  %p
    = found_count("ontologies", @ontologies)
  %p
  - if @ontologies.total_pages > 1
    = partial("shared/pagination", :items =>  @ontologies, :format => :html)
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "30%"}
          %b
            Name
        %td{:width => "70%"}
          %b
            Version
    %tbody#staffTable
      = partial("ontology", :with => @ontologies, :format => :html)

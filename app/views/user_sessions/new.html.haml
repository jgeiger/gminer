- title t('.title')
= page_title(t('.title'))
%br
= link_to t('link.signup'), signup_path
.user-form
  - semantic_form_for(@user_session, :url => user_session_path) do |f|
    = f.error_messages
    - f.inputs do
      = f.input :email
      = f.input :password
      = f.input :remember_me, :required => false, :as => :boolean, :label => t('.remember_me')
    - f.buttons do
      = f.commit_button t('label.signin')
= link_to t('link.forgot'), new_password_reset_url

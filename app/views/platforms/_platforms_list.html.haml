%br
- if @platforms.size == 0
  %p
    No platforms found...
- else
  %p
    = found_count("platforms", @platforms)
  %p
  - if @platforms.total_pages > 1
    = partial("shared/pagination", :items =>  @platforms, :format => :html)
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "20%"}
          %b
            GEO accession
        %td{:width => "20%"}
          %b
            Organism
        %td{:width => "60%"}
          %b
            Title
    %tbody#staffTable
      = partial("platform", :with => @platforms, :format => :html)

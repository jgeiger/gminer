%br
- if @series_items.size == 0
  %p
    No series found...
- else
  %p
    = found_count("series", @series_items)
  %p
  - if @series_items.total_pages > 1
    = render(:partial => "shared/pagination", :locals => {:items => @series_items})
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.rowHeader
        %td{:width => "20%"}
          %b
            GEO accession
        %td{:width => "10%"}
          %b
            PubMed
        %td{:width => "70%"}
          %b
            Title
    %tbody#staffTable
      = render(:partial => "series_item", :collection => @series_items)

- title t('.title')
= page_title(t('.title'))
.user-form
  - semantic_form_for(@user, :url => password_reset_path, :method => :put) do |f|
    = f.error_messages
    - f.inputs do
      = f.input :password
      = f.input :password_confirmation
    - f.buttons do
      = f.commit_button t(".submit")

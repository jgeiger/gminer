<% if AdminData::Util.has_one_what(klass).size > 0 %>
  <p>
    <strong>has_one :</strong> 

    <% AdminData::Util.has_one_what(klass).each do |bt| %>
      &nbsp;      
      <% if  model.send(bt) %>
        <%= link_to bt, 
                    admin_data_show_path(
                      :klass => AdminData::Util.get_class_name_for_belongs_to_class(model,bt), 
                      :model_id => model.send(bt).id) %>        
      <% else %>
          <%= bt %>              
      <% end %>  
    <% end %>  
  </p> 
<% end %>  
